<?xml version="1.0" ?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <kevin_payment>
                <status>0</status>
                <active>0</active>
                <title>Kevin Payments</title>
                <order_status>pending</order_status>
                <order_email_after>1</order_email_after>
                <allowspecific>0</allowspecific>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>0</can_use_internal>
                <can_initialize>0</can_initialize>
                <can_refund>1</can_refund>
                <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
                <group>offline</group>
                <sort_order>1</sort_order>
                <client_secret backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <signature backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <model>KevinPaymentFacade</model>
                <email_settings>
                    <order_email_before>1</order_email_before>
                    <order_email_after>0</order_email_after>
                    <invoice_email>1</invoice_email>
                </email_settings>
                <extra_settings>
                    <payment_list>1</payment_list>
                    <show_name>0</show_name>
                    <redirect_preferred>0</redirect_preferred>
                    <show_country_list>1</show_country_list>
                    <show_search>1</show_search>
                </extra_settings>
            </kevin_payment>
        </payment>
    </default>
</config>
